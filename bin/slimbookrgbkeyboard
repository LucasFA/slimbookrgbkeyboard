#!/usr/bin/python3
# -*- coding: utf-8 -*-

import os
import logging


USER = os.getlogin()
currpath = os.path.dirname(os.path.realpath(__file__))
logger = logging.getLogger()

if USER == 'root':
    logger.info("You are root, don't execute this program as root")

else: # Run

    if not os.system('pgrep slimbookrgbkeyboard.py') == 0:
        
        try:
            logger.info("Slimbook RGB Keyboard")
            os.system("python3 /usr/share/slimbookrgbkeyboard/src/slimbookrgbkeyboard.py")
        
        except:
            logger.info("Failed to execute program")
    
    else:
        logger.info("Program already in execution")
